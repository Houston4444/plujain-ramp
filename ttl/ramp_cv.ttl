rdfs:comment """
mono ramp tremolo

""";

lv2:port
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "In";
    lv2:name "In";
],
[
    a atom:AtomPort, lv2:InputPort;
    atom:bufferType atom:Sequence;
    atom:supports time:Position;
    lv2:index 1;
    lv2:symbol "ctrl_in";
    lv2:name "Ctrl In";
],
[
    a lv2:CVPort, lv2:OutputPort;
    lv2:index 2;
    lv2:symbol "Out";
    lv2:name "Out";
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 10;
],
[
    a lv2:InputPort, lv2:ControlPort ;
    lv2:index 3;
    lv2:symbol "on" ;
    lv2:name "Active",
        "Actif"@fr ;
    lv2:default 1 ;
    lv2:minimum 0 ;
    lv2:maximum 1 ;
    lv2:portProperty lv2:integer ;
    lv2:portProperty lv2:toggled ;
    lv2:designation lv2:enabled ;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 4;
    lv2:symbol "inactive_voltage";
    lv2:name "Inactive Voltage",
        "Voltage inactif"@fr ;
    lv2:default 10;
    lv2:minimum 0;
    lv2:maximum 10;
],
[
    a lv2:InputPort, lv2:ControlPort ;
    lv2:index 5;
    lv2:symbol "pre_start" ;
    lv2:name "Pre Start",
        "Pré-démarrage"@fr;
    lv2:default 0 ;
    lv2:minimum 0 ;
    lv2:maximum 32 ;
    lv2:portProperty lv2:integer ;
    lv2pg:group ramp_lv2:G102_RP;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 6;
    lv2:symbol "pre_start_units";
    lv2:name "Pre Start Units",
        "Unités du Pré-démarrage"@fr ;
    lv2:portProperty lv2:integer;
    lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [rdfs:label "beat"; rdf:value 1];
        lv2:scalePoint [rdfs:label "beat/2"; rdf:value 2];
        lv2:scalePoint [rdfs:label "beat/3"; rdf:value 3];
        lv2:scalePoint [rdfs:label "beat/4"; rdf:value 4];
        lv2:scalePoint [rdfs:label "beat/6"; rdf:value 6];
        lv2:scalePoint [rdfs:label "beat/8"; rdf:value 8];
    lv2:default 2;
    lv2:minimum 1;
    lv2:maximum 8;
    lv2pg:group ramp_lv2:G102_RP;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 7;
    lv2:symbol "beat_offset";
    lv2:name "Beat Offset",
        "Placement"@fr ;
    lv2:default 0;
    lv2:minimum -1;
    lv2:maximum 1;
    lv2pg:group ramp_lv2:G102_RP;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 8;
    lv2:symbol "random_beat_offset";
    lv2:name "Random Beat Offset",
        "Placement aléatoire"@fr ;
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2pg:group ramp_lv2:G102_RP;
],
[
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 9;
    lv2:symbol "bpm_host" ;
    lv2:name "Host BPM" ;
    lv2:portProperty epp:hasStrictBounds ;
    lv2:default 120 ;
    lv2:minimum 1 ;
    lv2:maximum 300 ;
    ue:unit ue:bpm ;
    lv2:portProperty pprop:notOnGUI ;
    lv2:designation <http://lv2plug.in/ns/ext/time#beatsPerMinute> ;
    lv2pg:group ramp_lv2:G103_SD;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 10;
    lv2:symbol "division";
    lv2:name "Division",
        "Division"@fr ;
    lv2:portProperty lv2:integer;
    lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [rdfs:label "8beats"; rdf:value 0];
        lv2:scalePoint [rdfs:label "7beats"; rdf:value 1];
        lv2:scalePoint [rdfs:label "6beats"; rdf:value 2];
        lv2:scalePoint [rdfs:label "5beats"; rdf:value 3];
        lv2:scalePoint [rdfs:label "4beats"; rdf:value 4];
        lv2:scalePoint [rdfs:label "3beats"; rdf:value 5];
        lv2:scalePoint [rdfs:label "2beats"; rdf:value 6];
        lv2:scalePoint [rdfs:label "beat";   rdf:value 7];
        lv2:scalePoint [rdfs:label "beat/2"; rdf:value 8];
        lv2:scalePoint [rdfs:label "beat/2 t"; rdf:value 9];
        lv2:scalePoint [rdfs:label "beat/3"; rdf:value 10];
        lv2:scalePoint [rdfs:label "beat/4"; rdf:value 11];
        lv2:scalePoint [rdfs:label "beat/4 t"; rdf:value 12];
        lv2:scalePoint [rdfs:label "beat/6"; rdf:value 13];
        lv2:scalePoint [rdfs:label "beat/8"; rdf:value 14];
    lv2:default 11;
    lv2:minimum 0;
    lv2:maximum 14;
    lv2pg:group ramp_lv2:G103_SD;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 11;
    lv2:symbol "max_duration";
    lv2:name "Max Duration",
        "Durée Maximale"@fr ;
        lv2:scalePoint [rdfs:label "beat/32"; rdf:value 0.03125];
        lv2:scalePoint [rdfs:label "beat/16"; rdf:value 0.0625];
        lv2:scalePoint [rdfs:label "beat/8"; rdf:value 0.125];
#         lv2:scalePoint [rdfs:label "beat/6"; rdf:value 0.1667];
        lv2:scalePoint [rdfs:label "beat/4"; rdf:value 0.25];
#         lv2:scalePoint [rdfs:label "beat/3"; rdf:value 0.3333];
        lv2:scalePoint [rdfs:label "beat/2"; rdf:value 0.5];
    lv2:default 8;
    lv2:minimum 0.0315;
    lv2:maximum 8;
    units:unit units:beat ;
    lv2:portProperty pprop:logarithmic ;
    lv2pg:group ramp_lv2:G103_SD;
],
[
    a lv2:InputPort, lv2:ControlPort ;
    lv2:index 12;
    lv2:symbol "half_speed" ;
    lv2:name "Half Speed",
        "Demi Vitesse"@fr ;
    lv2:default 0 ;
    lv2:minimum 0 ;
    lv2:maximum 1 ;
    lv2:portProperty lv2:integer ;
    lv2:portProperty lv2:toggled ;
    lv2pg:group ramp_lv2:G103_SD;
],
[
    a lv2:InputPort, lv2:ControlPort ;
    lv2:index 13;
    lv2:symbol "double_speed";
    lv2:name "Double Speed",
        "Double Vitesse"@fr ;
    lv2:default 0 ;
    lv2:minimum 0 ;
    lv2:maximum 1 ;
    lv2:portProperty lv2:integer ;
    lv2:portProperty lv2:toggled ;
    lv2pg:group ramp_lv2:G103_SD;
],

[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 14;
    lv2:symbol "attack";
    lv2:name "Attack",
        "Attaque"@fr ;
    lv2:default 5;
    lv2:minimum 0.5;
    lv2:maximum 200;
    units:unit units:ms ;
    lv2pg:group ramp_lv2:G104_GS;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 15;
    lv2:symbol "shape";
    lv2:name "Shape",
        "Forme"@fr ;
    lv2:default 0;
    lv2:minimum -4;
    lv2:maximum 4;
    lv2pg:group ramp_lv2:G104_GS;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 16;
    lv2:symbol "random_shape";
    lv2:name "Random Shape",
        "Forme aléatoire"@fr ;
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2pg:group ramp_lv2:G104_GS;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 17;
    lv2:symbol "depth";
    lv2:name "Depth",
        "Profondeur"@fr ;
    lv2:default 1;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2pg:group ramp_lv2:G104_GS;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 18;
    lv2:symbol "voltage";
    lv2:name "Voltage",
        "Voltage"@fr ;
    lv2:default 10;
    lv2:minimum 0;
    lv2:maximum 10;
    lv2pg:group ramp_lv2:G104_GS;
].

ramp_lv2:G102_RP
	a lv2pg:InputGroup;
	lv2:name "Rhythmic Placement",
        "Placement rythmique"@fr;
	lv2:symbol "RP" .
	
ramp_lv2:G103_SD
    a lv2pg:InputGroup;
    lv2:name "Speed",
        "Vitesse"@fr;
    lv2:symbol "speedgp" .
    
ramp_lv2:G104_GS
    a lv2pg:InputGroup;
    lv2:name "Global Shape",
        "Forme Globale"@fr;
    lv2:symbol "global_shape" .

